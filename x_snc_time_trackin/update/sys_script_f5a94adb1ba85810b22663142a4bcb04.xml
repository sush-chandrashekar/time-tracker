        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    var gdt = new GlideDateTime(current.date);
    var month = gdt.getMonthUTC();
    var dayofmonth = gdt.getDayOfMonthUTC();

    var gr = new GlideRecord('time_card_daily');
    gr.addQuery('sys_id', current.sys_id);
    gr.query();

    if (gr.next()) {
        var payPeriod = (dayofmonth <= 15) ? (month * 2) - 1 : month * 2;
        gr.u_pay_period = payPeriod.toString();
        gr.update();
    }

})(current, previous);]]></script>
